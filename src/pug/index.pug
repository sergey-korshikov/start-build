extends base/page

block variables
	- var pageTitle = 'Главная страница'
	- var pageClass = '' // дополнительный класс для ".page"

block content
	include base/header

	main.main
		.container
			.row
				div(style="box-shadow:inset 0 0 15px #000;min-height:600px;width:100%")
					div(style="padding:30px 0 0;text-align:center")
						a.button.button_write.js-modal-open(href="#", data-modal-name="write")
							span Написать нам

					div(style="padding:30px 0 0;text-align:center")
						a.button.button_write.js-modal-open(href="#", data-modal-name="write")
							span Написать нам еще

					div(style="padding:30px 0 0;text-align:center")
						a.button.js-modal-open(href="#", data-modal-name="buyNow")
							span Купить

					div(style="padding:30px 0 0;text-align:center")
						a.button.js-modal-open(href="#", data-modal-name="buyNow")
							span Купить больше всех

	include base/footer