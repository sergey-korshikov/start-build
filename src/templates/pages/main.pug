	- var styles = ['style.css']
	- var scripts = ['script.js']

block content
	include ../components/header

	main.main
		.container
			div(style="background:#353844;min-height:400px;height:100%;text-align:center")
				div(style="padding:30px 0 0")
					a.button.button_write.js-modal-open(href="/ajax/form-write.html", data-modal-name="write")
						span Написать нам

				div(style="padding:30px 0 0")
					a.button.button_write.js-modal-open(href="/ajax/form-write.html", data-modal-name="write")
						span Написать нам еще

				div(style="padding:30px 0 0")
					a.button.js-modal-open(href="/ajax/form-buy.html", data-modal-name="buy")
